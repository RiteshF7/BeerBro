rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user profile document
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Example: Public read access for posts, authenticated write
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Example: Private collections requiring authentication
    match /private/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Test collection for demo purposes
    match /test-collection/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
